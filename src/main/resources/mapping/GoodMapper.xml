<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ssm.mapper.GoodMapper">

    <insert id="save" parameterType="ssm.model.goods">
        insert into goods(name,price_before,price_sale,express,type,status,description)
        values (#{name},#{price_before},#{price_sale},#{express},#{type},#{status},#{description})
    </insert>

    <delete id="delete" parameterType="ssm.model.goods">
        delete from goods where id= #{id}
    </delete>

    <update id="update" parameterType="ssm.model.goods">
        update goods set name=#{name} where id=#{id}
    </update>

    <select id="list" resultType="ssm.model.goods">
        select * from  goods
    </select>

    <select id="get" parameterType="_int" resultType="ssm.model.goods">
        select * from  goods  where id= #{id}
    </select>

    <select id="getbyname" parameterType="String" resultType="ssm.model.goods">
        select * from  goods  where name= #{name}
    </select>

    <select id="getgoodlikename" parameterType="java.lang.String" resultType="ssm.model.goods">
        SELECT * FROM goods WHERE name LIKE CONCAT(CONCAT('%', #{name}), '%');
    </select>


</mapper>