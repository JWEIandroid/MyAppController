<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ssm.mapper.GoodMapper">

    <delete id="delete" parameterType="ssm.model.goods">
        delete from goods where id= #{id}
    </delete>

    <select id="get" parameterType="_int" resultType="ssm.model.goods">
        select * from  goods  where id= #{id}
    </select>

    <update id="update" parameterType="ssm.model.goods" >
        update goods set name=#{name} where id=#{id}
    </update>

    <select id="list" resultType="ssm.model.goods">
        select * from  goods
    </select>

    <select id="findUserByNameAndPwd" parameterType="map" resultType="ssm.model.goods">
        select name,password from goods where name = #{name} and password = #{password}
    </select>

    <select id="getUser" parameterType="map" resultType="ssm.model.goods">
        select name,password from goods where name = #{name} and password = #{password}
    </select>


    <insert id="save" parameterType="ssm.model.goods" >
        insert into goods(name,password,adress,tel,token,sex,description)
        values (#{name},#{password},#{adress},#{tel},#{token},#{sex},#{description})
    </insert>


</mapper>