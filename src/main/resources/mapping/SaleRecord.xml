<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="ssm.mapper.SaleRecordMapper">

    <!--插入一条售出记录-->
    <insert id="save" parameterType="ssm.model.salerecord">
        INSERT into salerecord (userid,user_sale_id,goodsid,date,shouhuomsg) VALUES
        (#{userid},#{user_sale_id},#{goodsid},#{date},#{shouhuomsg})
    </insert>

    <!--删除一条售出记录-->
    <delete id="deletewith2id" parameterType="ssm.model.salerecord">
        DELETE FROM salerecord WHERE userid = #{userid} AND goodsid = #{goodsid}
    </delete>

    <!--修改一条售出记录-->
    <update id="update" parameterType="ssm.model.salerecord">
        UPDATE salerecord set
        userid = #{userid},
        goodsid = #{goodsid},
        usersaleid = #{usersaleid},
        date  = #{date},
        shuohuomsg = #{shuohuomsg}
    </update>

    <!--查询一条售出记录-->
    <select id="query" parameterType="map" resultType="ssm.model.salerecord">
        SELECT * FROM salerecord where userid = #{userid} AND goodsid = #{goodsid}
    </select>


    <!--查询用户全部卖出记录-->
    <select id="list_user" resultMap="salerecordbean" >
           select
           s.*,
           sh.*,
           u.*
            from salerecord s
             LEFT  JOIN
               user u on
                s.userid=u.id
                LEFT  JOIN
                  shouhuomsg sh on
                   s.shouhuomsg = s.id
                   where u.id = #{userid}
    </select>

    <!--结果映射-->
    <resultMap id="salerecordbean" type="map">
        <id column="id" property="id"/>
        <result column="date" property="date"/>
        <result column="goodsid" property="goodsid"/>
        <result column="user_sale_id" property="user_sale_id"/>
        <collection property="userid" ofType="ssm.model.User">
            <result column="u_id" property="id"/>
            <result column="name" property="name"/>
            <result column="password" property="password"/>
            <result column="tel" property="tel"/>
            <result column="adress" property="adress"/>
            <result column="sex" property="sex"/>
            <result column="token" property="token"/>
            <result column="create_time" property="create_time"/>
            <result column="update_time" property="update_time"/>
            <result column="headimg" property="headimg"/>
            <result column="description" property="description"/>
        </collection>
        <collection property="shouhuomsg" ofType="ssm.model.shuohuomsg">
            <id column="sh_id" property="id"/>
            <result column="userid" property="userid"/>
            <result column="goodsid" property="goodsid"/>
            <result column="receiver" property="receiver"/>
            <result column="tel" property="tel"/>
            <result column="adress" property="adress"/>
            <result column="date" property="date"/>
        </collection>
    </resultMap>



</mapper>